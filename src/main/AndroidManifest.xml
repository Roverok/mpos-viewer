<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.taviscaron.mposviewer"
      android:versionCode="5"
      android:versionName="1.2">

    <uses-sdk android:minSdkVersion="9" android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher" android:theme="@style/MainTheme" android:allowBackup="true">
        <activity android:name=".activity.MainActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.AccountsManagementActivity" android:label="@string/account_management_activity_title" />
        <activity android:name=".activity.AccountViewActivity" android:label="@string/account_view_activity_title" />
    </application>
</manifest>