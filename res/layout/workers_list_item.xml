<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="5dp"
              android:baselineAligned="false"
              android:background="@drawable/bg_info_block">

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/worker_username"
                style="@style/WorkersItemAttributeName"/>

        <TextView
                android:id="@+id/worker_item_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                style="@style/DefaultTextView"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/worker_hashrate"
                style="@style/WorkersItemAttributeName"/>

        <TextView
                android:id="@+id/worker_item_hashrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DefaultTextView"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/worker_password"
                style="@style/WorkersItemAttributeName"/>


        <TextView
                android:id="@+id/worker_item_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                style="@style/DefaultTextView"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/worker_difficulty"
                style="@style/WorkersItemAttributeName"/>

        <TextView
                android:id="@+id/worker_item_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DefaultTextView"/>

    </LinearLayout>

</LinearLayout>